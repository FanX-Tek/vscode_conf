{

    "files.associations": {
        "*.config": "makefile",
        "*_defconfig": "makefile"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,

        "**/arch/{[c-z]*,al*,arc,arm}": true,
        "**/arch/arm64/boot/dts/{[a-q]*,[s-z]*,re*}": true,
        "**/arch/arm64/boot/dts/rockchip/{px30*,rk1*,rk33*,*ddr3*,rk3566*,*evb[2-9]*,*toybrick*,*vehicle*}": true,
        "**/arch/arm64/configs/{am*,db*,fi*,hi*,px*,rk1*,rk33*,rockpi*}": true,
        "**/scripts/dtc/include-prefixes/*": true
    },

    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,

        "**/arch/{[c-z]*,al*,arc,arm}": true,
        "**/arch/arm64/boot/dts/{[a-q]*,[s-z]*,re*}": true,
        "**/arch/arm64/boot/dts/rockchip/{px30*,rk1*,rk33*,*ddr3*,rk3566*,*evb[3-9]*,*toybrick*,*vehicle*}": true,
        "**/arch/arm64/configs/{am*,db*,fi*,hi*,px*,rk1*,rk33*,rockpi*}": true,
        "**/scripts/dtc/include-prefixes/*": true
    }

}